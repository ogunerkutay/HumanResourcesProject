@using BusinessLayer.Models.VMs
@model List<AppUserVM>
@{
    ViewData["Title"] = "PersonList";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

@*@{
    string renk = "";

}*@

<div class="search-field d-none d-md-block bg-white">
    <form class="d-flex align-items-center h-100" action="#">
        <div class="input-group">
            <div class="input-group-prepend bg-transparent">
                <i class="input-group-text border-0 mdi mdi-magnify" style="font-size: 20px"></i>
            </div>
            <input type="text" class="form-control bg-transparent border-0" style="font-size: 14px" placeholder="Aranacak kelime">
        </div>
    </form>
</div>
<br>


<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Personeller</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Fotoğraf </th>
                                <th> İsim </th>
                                <th> Soyisim </th>
                                <th> Departman </th>
                                <th> Ünvan </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                string renk = string.Empty;
                                @*renk = "background: linear-gradient(to right,rgb(255, 0, 0) 0%, rgb(0, 255, 0) 100%);";*@
                            
                                
                                if (item.Department.DepartmentName == "Pazarlama")
                                {
                                    renk = "badge-gradient-success";
                                }
                                if (item.Department.DepartmentName == "Üretim")
                                {
                                    renk = "badge-gradient-warning";
                                }
                                if (item.Department.DepartmentName == "IT")
                                {
                                    renk = "badge-gradient-danger";
                                }
                                @*if (item.Department.DepartmentName == "1")
                            {
                            color = "badge badge-gradient-secondary";
                            }
                            if (item.Department.DepartmentName == "2")
                            {
                            color = "badge badge-gradient-info";
                            }
                            if (item.Department.DepartmentName == "3")
                            {
                            color = "badge badge-gradient-primary";
                            }*@
                                <tr>
                                    <td>
                                        <img src="~/images/@item.ImagePath" class="mr-2" alt="image">
                                    </td>
                                    <td>
                                        @item.FirstName
                                    </td>
                                    <td>
                                        @item.LastName
                                    </td>
                                    <td>
                                        <label class="badge @renk"  > @item.Department.DepartmentName</label>
                                    </td>
                                    <td> @item.Title </td>
                                    <td> <a href="/User/UserDetails/@item.Id" class="btn btn-gradient-info">Detaylar</a> </td>

                                </tr>
                            }



                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

