@using BusinessLayer.Models.VMs
@model List<AppUserVM>
@{
    ViewData["Title"] = "PersonList";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}




<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Personeller</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> İsim </th>
                                <th> Soyisim </th>
                                <th> Departman </th>
                                <th> Ünvan </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/images/@item.Id/@item.ImagePath/" class="mr-2" alt="image">
                                    </td>
                                    <td>
                                        @item.FirstName 
                                    </td>
                                    <td>
                                        @item.LastName
                                    </td>
                                    <td>
                                        <label class="badge badge-gradient-success">@item.Department.DepartmentName</label>
                                    </td>
                                    <td> @item.Title </td>
                                    <td> <a href="/User/UserDetails/@item.Id" class="btn btn-dark">Detaylar</a> </td>

                                </tr>
                            }



                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

