<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Personelin Detayları</h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Fotoğraf</th>
                        <th>İsim</th>
                        <th>Soyİsim</th>
                        <th>Cinsiyet</th>
                        <th>TC NO</th>
                        <th>Doğum Tarihi</th>
                        <th>Adres</th>
                        <th>Ünvan</th>
                        <th>İşe Başlama Tarihi</th>
                        <th>İzin Hakkı</th>
                        <th>Telefon No</th>
                        <th>Departman</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <img src="~/images/@Model.ImagePath" class="mr-2" alt="image">
                        </td>
                        <td> @Model.FirstName </td>
                        <td> @Model.LastName </td>
                        <td> @Model.Gender </td>
                        <td> @Model.TCNO </td>
                        <td>@(((DateTime)Model.BirthDate).ToString("MM/dd/yyyy")) </td>
                        <td> @Model.Address </td>
                        <td> @Model.Title </td>
                        <td> @Model.EmploymentDate </td>
                        <td> @Model.AnnualLeave </td>
                        <td> @Model.PhoneNumber </td>
                        <td> @Model.Department.DepartmentName </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>